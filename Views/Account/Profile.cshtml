@model THweb.Areas.Identity.Models.ApplicationUser
@{
    ViewData["Title"] = "Hồ Sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Hồ Sơ Người Dùng</h2>
    <form method="post" asp-action="Profile" asp-controller="Account" asp-area="Identity">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="FullName">Họ và Tên</label>
            <input asp-for="FullName" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Cập Nhật</button>
    </form>
</div>