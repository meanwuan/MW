@model THweb.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<div class="container">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h4>@Model.Price.ToString("C")</h4>
            <p><strong>Danh mục:</strong> @Model.CategoryName</p>
            <p>@Model.Description</p>
            <form method="post" asp-action="AddToCart" asp-controller="Cart">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label for="quantity">Số lượng:</label>
                    <input type="number" name="quantity" value="1" min="1" class="form-control w-25 d-inline" />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Thêm vào giỏ</button>
            </form>
            <a href="@Url.Action("Index", "Feedback", new { productId = Model.Id })" class="btn btn-secondary mt-2">Xem phản hồi</a>
        </div>
    </div>
</div>