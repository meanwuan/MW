@model IEnumerable<THweb.Models.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Sản Phẩm";
}

<div class="container">
    <h2>Danh Sách Sản Phẩm</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <p class="card-text"><small class="text-muted">@product.CategoryName</small></p>
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary">Xem chi tiết</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Index" asp-controller="Feedback" asp-route-productId="@product.Id" class="btn btn-secondary">Phản hồi</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>